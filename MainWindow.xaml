<Window x:Class="Такси.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Такси"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" FontSize="27" FontWeight="Bold" FontStretch="Expanded" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Center">
            Кто вы?
        </Label>
        <Button Grid.Row="2" x:Name="DriveButton" Height="40" FontSize="20" Width="200" Content="Водитель" Click="DriveButton_Click"/>
        <Button Grid.Row="3" x:Name="ClientButton" Height="40" FontSize="20" Width="200" Content="Клиент" Click="ClientButton_Click"/>

    </Grid>
</Window>
